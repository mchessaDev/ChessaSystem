@model ChessaSystem.ViewModels.FuncionarioViewModel

<h2>Cadastrar Novo Funcionário</h2>

<form asp-action="Novo" method="post">
    <div>
        <label for="Nome">Nome</label>
        <input type="text" id="Nome" name="Nome" value="@Model.Nome" required />
    </div>

    <div>
        <label for="Sobrenome">Sobrenome</label>
        <input type="text" id="Sobrenome" name="Sobrenome" value="@Model.Sobrenome" required />
    </div>

    <div>
        <label for="Matricula">Matrícula</label>
        <input type="text" id="Matricula" name="Matricula" value="@Model.Matricula" required />
    </div>

    <div>
        <label for="Email">Email</label>
        <input type="email" id="Email" name="Email" value="@Model.Email" required />
    </div>

    <button type="submit">Cadastrar</button>
</form>